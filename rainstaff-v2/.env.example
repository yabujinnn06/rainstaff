# Rainstaff v2 Environment Configuration

# Application
APP_NAME=Rainstaff ERP
APP_VERSION=2.0.0
DEBUG=True

# Database
DATABASE_URL=sqlite:///./data/rainstaff.db

# Security
SECRET_KEY=change-this-to-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Cloud Sync (Render)
CLOUD_SYNC_ENABLED=True
CLOUD_API_URL=https://rainstaff-v2.onrender.com
CLOUD_API_KEY=your-secure-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/rainstaff.log
